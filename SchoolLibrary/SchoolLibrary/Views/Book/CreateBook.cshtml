@model SchoolLibrary.DTO.BookDto
@{

}

<h2> @ViewBag.Title</h2>

<div>
    @using (Html.BeginForm("SaveBook", "Book", FormMethod.Post))
    {
        <div class="row" style="@(Model.Id>0?"display:block":"display:none")">
            @Html.LabelFor(x => x.Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(x=>x.Id)
                @Html.HiddenFor(x=>x.Id)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(x => x.AuthorName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.AuthorName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.AuthorName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(x => x.BirthDateAuthor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.BirthDateAuthor, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = Model.BirthDateAuthor.ToString("yyyy-MM-dd") } })
                @Html.ValidationMessageFor(x => x.BirthDateAuthor, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(x => x.Country, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Country, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Country, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(x => x.BookTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.BookTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.BookTitle, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(x => x.DateRelease, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.DateRelease,  new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = Model.DateRelease.ToString("yyyy-MM-dd") }  })
                @Html.ValidationMessageFor(x => x.DateRelease, "", new { @class = "text-danger" })
            </div>
        </div>




        <input type="submit" value="Save" />
    }


</div>


