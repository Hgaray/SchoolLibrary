@model List<SchoolLibrary.DTO.BookDto>
@{
    ViewBag.Title = "Books";
}

<h2>Books</h2>

<div >
    <a class="btn btn-success" href="~/Book/CreateBook"> Create</a>


</div>
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">AuthorName</th>
                <th scope="col">BirthDateAuthor</th>
                <th scope="col">Country</th>
                <th scope="col">BookTitle</th>
                <th scope="col">DateRelease</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
            <tr>
                <td scope="row">@(m.AuthorName)</td="row">
                <td>@(m.BirthDateAuthor)</td>
                <td>@(m.Country)</td>
                <td>@(m.BookTitle)</td>
                <td>@(m.DateRelease)</td>
                <td>
                    <a class="btn btn-xs btn-warning" href="~/Book/ModifyBook?bookId=@m.Id"> Edit</a>/
                    <a class="btn btn-xs btn-danger" href="~/Book/DeleteBook?bookId=@m.Id"> Delete</a>
                </td>


            </tr>
            }
        </tbody>
    </table>

</div>
